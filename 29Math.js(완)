//Math는 프로퍼티와 메서드만 제공하기 때문에 생성자 함수가 아니다.
//Math.PI
console.log(Math.PI); //3.141592653589793

//Math.abs : 절대값 반환 
console.log(Math.abs(-1 + -3)); //4
Math.abs(''); //0
Math.abs([]); //0
Math.abs(null); //0
Math.abs(undefined); //NaN
Math.abs({}); //NaN
Math.abs('string'); // NaN
Math.abs(); //NaN

//Math.round : 소숫점 이하 반올림
Math.round(1.4) // 1

//Math.ceil : 소숫점 올림
Math.ceil(-1.2); //-1

//Math.floor : 소숫점 내림
Math.floor(1.9); //1

//Math.sqrt : 제곱근을 반환(루트)
Math.sqrt(9);   //3

//Math.random : 랜덤 숫자 반환 0과 1미만의 실수
const random =  Math.random();
console.log(random);
//1부터 10 사이의 정수 나오게 하려면?
const randomOneTen = Math.floor(10 * Math.random() + 1);
console.log(randomOneTen); //7

//Math.pow : 제곱메서드. 첫인수를 밑으로, 두번째 인수를 지수로 거듭제곱 후 반환 
const num = Math.pow(2,5);
console.log(num); //32
//지수 연산자(**)를 사용해도 같은 결과가 나온다.

//Math.max : 가장 큰 수를 반환한다.
//Math.min : 가장 작은 수를 반환한다.
const arr = [10,20,30];
const max = Math.max(...arr);
const min = Math.min(...arr);
console.log(max, min); //30 10 

